
extends layouts/wizard-step-layout


block wizard-status-bar
    {{#if user}}
    | {{user.email}}
    a#show-login-popup Not you?
    {{else}}
    | Have an account?
    a#show-login-popup Login
    {{/if}}


block wizard-step
    header

        {{#if showModeToggleButton}}
        button#toggle-address-mode.button-secondary(type="button") {{toggleButtonText}}
        {{/if}}

        h1 Shipping Address


    form#shipping-info-form(autocomplete="off")

        #address-mode.section

        button#wizard-next-step.button-primary(type="submit", disabled=true) Fill in all fields
