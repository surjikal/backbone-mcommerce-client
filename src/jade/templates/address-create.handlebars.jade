
fieldset.address-create

    fieldset
        label(for="shipping-firstname") Full Name
        input#shipping-firstname(name="shipping[firstname]", placeholder="John", type="text")
        input#shipping-lastname(name="shipping[lastname]", placeholder="Johnson", type="text")

    label Street Address
        input#shipping-street(name="shipping[street]", placeholder="123 Awesome Road", type="text")

    label Postal Code
        input#shipping-postalcode(name="shipping[postalcode]", type="text", placeholder="B4N 4N4", autocapitalize="on")

